/* components/z-musiclist/z-musiclist.wxss */


.container {
  width: 100%;
  height: auto;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
}

.container .list-item {
  width: 200rpx;
  height: 300rpx;
}

.container .list-item .list-item-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 5%;
  background-size: 100% 100%;
}

.container .list-item text {
  font-size: 12px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 25rpx;
}
l-loading{
  position: absolute;
  left: calc(50% - 18px);

}
